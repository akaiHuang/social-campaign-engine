{
  "expo": {
    "name": "Sara2 Studio",
    "slug": "igshare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B0E14"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fawakai.sara2studio",
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "instagram",
          "instagram-stories",
          "instagram-story-camera"
        ],
        "NSPhotoLibraryUsageDescription": "需要存取相簿以儲存和分享影片到 Instagram",
        "NSPhotoLibraryAddUsageDescription": "需要儲存影片到相簿以分享到 Instagram",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B0E14"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.fawakai.sara2studio",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "igshare",
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "允許 $(PRODUCT_NAME) 存取您的照片以分享到 Instagram",
          "savePhotosPermission": "允許 $(PRODUCT_NAME) 儲存影片到您的相簿",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "d151cd3c-e3fb-4b0e-9c2d-4b08de4b8ef8"
      }
    },
    "owner": "akaihuang"
  }
}
